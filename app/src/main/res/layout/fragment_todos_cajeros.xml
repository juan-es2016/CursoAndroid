<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.m2.montano.j.localizadorcajeroscochalav2.ItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8F5E9"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.m2.montano.j.localizadorcajeroscochalav2.Fragments.TodosCajerosFragment"
        tools:listitem="@layout/fragment_item" />

    <Button
        android:id="@+id/mostrar_en_mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="MOSTRAR EN MAPA" />
</RelativeLayout>

